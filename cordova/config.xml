<widget id="com.quasarframework.quasarplay" version="0.13.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>Quasar Play</name>
  <description>
      Quasar Play for Quasar Framework
  </description>
  <author email="razvan.stoenescu@gmail.com" href="http://quasar-framework.org">
      Razvan Stoenescu
  </author>
  <platform name="android">
      <icon density="ldpi" src="res/android/ldpi.png" />
      <icon density="mdpi" src="res/android/mdpi.png" />
      <icon density="hdpi" src="res/android/hdpi.png" />
      <icon density="xhdpi" src="res/android/xhdpi.png" />
      <icon density="xxhdpi" src="res/android/xxhdpi.png" />
      <icon density="xxxhdpi" src="res/android/xxxhdpi.png" />
  </platform>
  <content src="index.html" />
  <plugin name="cordova-plugin-whitelist" spec="1" />
  <access origin="*" />
  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  <allow-intent href="tel:*" />
  <allow-intent href="sms:*" />
  <allow-intent href="mailto:*" />
  <allow-intent href="geo:*" />
  <platform name="android">
    <allow-intent href="market:*" />
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*" />
    <allow-intent href="itms-apps:*" />
  </platform>
</widget>
