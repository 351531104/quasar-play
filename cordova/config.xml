<widget id="com.quasarframework.quasarplay" version="0.13.7" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>Quasar Play</name>
  <description>
      Quasar Play for Quasar Framework
  </description>
  <author email="razvan.stoenescu@gmail.com" href="http://quasar-framework.org">
      Razvan Stoenescu
  </author>
  <platform name="android">
      <icon density="ldpi" src="res/android/ldpi.png" />
      <icon density="mdpi" src="res/android/mdpi.png" />
      <icon density="hdpi" src="res/android/hdpi.png" />
      <icon density="xhdpi" src="res/android/xhdpi.png" />
      <icon density="xxhdpi" src="res/android/xxhdpi.png" />
      <icon density="xxxhdpi" src="res/android/xxxhdpi.png" />
  </platform>
  <content src="index.html" />
  <plugin name="cordova-plugin-whitelist" spec="1" />
  <access origin="*" />
  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  <allow-intent href="tel:*" />
  <allow-intent href="sms:*" />
  <allow-intent href="mailto:*" />
  <allow-intent href="geo:*" />
  <platform name="android">
    <allow-intent href="market:*" />
  </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon height="180" src="icon/icon180.png" width="180" />
        <icon height="167" src="icon/icon167.png" width="167" />
        <icon height="152" src="icon/icon152.png" width="152" />
        <icon height="144" src="icon/icon144.png" width="144" />
        <icon height="120" src="icon/icon120.png" width="120" />
        <icon height="114" src="icon/icon114.png" width="114" />
        <icon height="100" src="icon/icon100.png" width="100" />
        <icon height="80" src="icon/icon80.png" width="80" />
        <icon height="76" src="icon/icon76.png" width="76" />
        <icon height="72" src="icon/icon72.png" width="72" />
        <icon height="60" src="icon/icon60.png" width="60" />
        <icon height="58" src="icon/icon58.png" width="58" />
        <icon height="57" src="icon/icon57.png" width="57" />
        <icon height="50" src="icon/icon50.png" width="50" />
        <icon height="40" src="icon/icon40.png" width="40" />
        <icon height="29" src="icon/icon29.png" width="29" />
    </platform>
</widget>
